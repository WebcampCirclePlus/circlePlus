<div class="container">
<div class="row">

<h1>Users#edit:ユーザー編集</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<%= form_for(@user, url: edit_user_path(current_user.id), method: :patch) do |f| %>
<table class="col-10 mx-auto" style="width: 100%;">
	<tr>
		<th><h2><%= current_user.user_name %>の編集ページ</h2></th>
		<th></th>
		<th></th>
	</tr>

	<tr>
		<td><span class = "fa fa-user"></span>ユーザーネーム</td>
		<td><%= f.text_field :user_name %></td>
		<td></td>
	</tr>

	<tr>
		<td><span class = "fa fa-user"></span>氏名（カタカナ）</td>
		<td><%= f.text_field :name_kana %></td>
		<td></td>
	</tr>

	<tr>
		<td><span class = "fa fa-user"></span>氏名（漢字）</td>
		<td><%= f.text_field :name_kanji %></td>
		<td></td>
	</tr>

	<tr>
		<td><span class = "fa fa-phone"></span>電話番号</td>
		<td><%= f.text_field :phone_number %></td>
		<td></td>
	</tr>

	<tr>
		<td><span class = "fa fa-envelope"></span>Email</td>
		<td><%= f.email_field :email %></td>
		<td></td>
	</tr>

	<tr>
		<td><span class = "fa fa-lock"></span>パスワード</td>
		<td><%= f.password_field :password %></td>
		<td></td>
	</tr>

	<tr>
		<td><%= f.submit "編集", class:"btn btn-lg btn-danger btn-base-1 mt-20" %></td>
		<td></td>
		<td></td>
	</tr>

	<tr>
		<td><%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-lg btn-success btn-base-1 mt-20" %></td>
		<td></td>
		<td></td>
	</tr>
</table>
<% end %>

</div>
</div>
<!-- ユーザー編集機能は実装していない状態 -->