<h1>Items#show:商品の詳細</h1>
			<p>Find me in app/views/items/show.html.erb</p>

<div class="container">
	<div class="row">

		<div class="col-lg-10 mx-auto">
			<div class="container">
			<div class = "row">
				<!-- 左 -->
				<div class="col-lg-6 mb-5">
					<%= attachment_image_tag @item, :item_img, class:"", style: "width: 100%; height: 100%;" %>
				</div>
				
				<!-- 右 -->
				<div class="col-lg-6 bg-white px-3 mb-5">

					<h2 class="my-3"><%= @item.album_name %></h2>
					<p class="mb-5">アーティスト名: <%= @item.artist.artist_name %></p>

					<p class="mb-0">価格</p>
					<h3  class="mb-3">¥ <%= @item.item_price_tax_free %></h3>

					<p class="mb-3">在庫: <%= @item.stock %>点</p>

					<%= form_for(@cart_item , url:item_cart_items_path(@item), html:  {class: "float-right"}) do |f|  %>
					<%= f.number_field :item_cart_counted ,value:"1", in: 1...21, size: 20 %>点
					
						<%= button_tag :type => "submit", :class =>"btn btn-danger my-5" do %>
	  					<i class="fas fa-cart-arrow-down"></i> カートにいれる
						<% end %>
					<% end %>
					
				</div>

			</div>
			</div>
		</div>

		<%= link_to :back, class: "btn btn-success white-text col-lg-6 mx-auto mb-5" do %>
					<i class="fas fa-chevron-left"></i> 前のページに戻る
					<% end %>


	</div>
</div>
