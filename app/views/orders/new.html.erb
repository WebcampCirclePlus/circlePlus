<h2>Orders#new：最終確認</h2>
<p>Find me in app/views/orders/new.html.erb</p>

<% if current_user.cart_items.empty? %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  カートに商品がありません！
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>TOPページ→商品詳細</strong>より商品を追加することができます。
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="alert alert-danger" role="alert" style="height: 100px">
  <h4><strong>カートに商品を追加してください。</strong></h4>
</div>
<% else %>


<div class="col-10">
	<!-- エラーメッセージ -->
	<% if @order.errors.any? %>
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
	  <strong><%= @order.errors.count %>件のエラーがあります。</strong>
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span></button>
	</div>
    <% @order.errors.full_messages.each do |msg| %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
  	<%= msg %>
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	  <span aria-hidden="true">&times;</span>
	  </button>
	</div>
    <% end %>
    <% end %>

<div class="card pb-3" style="width: 90%;">
  <div class="card-body">
    <h5 class="card-title text-center">注文内容</h5>
    <div class="card mr-2 ml-2" style="width: 95%;">
  <ul class="list-group list-group-flush">
    <% current_user.cart_items.each do |ci| %>
    <li class="list-group-item text-center"><%= ci.item.album_name %></li>
    <li class="list-group-item"><p>アーティスト名：<%= ci.item.artist.artist_name %></p>
<p>レーベル：<%= ci.item.label %></p>
<p>単価：<%= ci.item.item_price_tax_free %>　購入個数：<%= ci.item_cart_counted %></p>
<p class="text-right">小計：<%= ci.item.item_price_tax_free * ci.item_cart_counted %></p></li>
    <% end %>
  </ul>
</div>
  </div>
</div>
</div>

<P>最終確認</P>
<h4>カート内容</h4>


<% current_user.cart_items.each do |ci| %>
<p>アルバム名：<%= ci.item.album_name %></p>
<p>アーティスト名：<%= ci.item.artist.artist_name %></p>
<p>レーベル：<%= ci.item.label %></p>
<p>単価：<%= ci.item.item_price_tax_free %></p>
<p>購入個数：<%= ci.item_cart_counted %></p>
<p>合計：<%= ci.item.item_price_tax_free * ci.item_cart_counted %></p></br>
<!-- ジャケット画像の追加は任意。アルバム名～レーベルの配置も変えてください。 -->
<% end %>
<h4>配送先</h4>
<%= form_for(@order ,url:user_orders_path,method: :post) do |f| %>
<%= f.text_field :order_sending_postar_code, value:current_user.postal_code %>
<%= f.text_field :order_sending_str, value:current_user.address %>
<%= f.submit "確定", data: {confirm: "本当に確定しますか？"} %>
<% end %>

<% end %>